apiVersion: apps/v1
kind: Deployment
metadata:
    name: radarr
    namespace: {{ namespace }}
    labels:
        app: radarr
        type: third-party
        facing: internal
spec:
    replicas: 3
    strategy:
        type: Recreate
    selector:
        matchLabels:
            app: radarr
    template:
        metadata:
            labels:
                app: radarr
        spec:         
            containers:
                - name: radarr
                  image: linuxserver/radarr:latest
                  env:
                      - name: PUID
                        value: "1002"
                      - name: PGID
                        value: "1007"
                      - name: TZ
                        value: "Pacific"
                  ports:
                      - containerPort: 7878
                  volumeMounts:
                      - name: radarr-config
                        mountPath: /config
                      - name: radarr-fileserver
                        mountPath: /downloads                   
                      - name: radarr-movies
                        mountPath: /movies
                  readinessProbe:
                      httpGet:
                          path: /
                          port: 7878
                      periodSeconds: 10
                      failureThreshold: 3
                  livenessProbe:
                      httpGet:
                          path: /
                          port: 7878
                      initialDelaySeconds: 60
                      periodSeconds: 10
                      failureThreshold: 5
                  resources:
                      requests:
                          memory: {{ mem_request }}
                          cpu: {{ cpu_request }}
                      limits:
                          memory: {{ mem_limit }}
                          cpu: {{ cpu_limit }}
            volumes:
                - name: radarr-config
                  persistentVolumeClaim:
                    claimName: radarr-config
                - name: radarr-fileserver
                  persistentVolumeClaim:
                    claimName: radarr-fileserver
                - name: radarr-movies
                  persistentVolumeClaim:
                    claimName: radarr-movies
