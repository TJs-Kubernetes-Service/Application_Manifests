apiVersion: v1
kind: PersistentVolume
metadata:
    name: unifi-controller-config
    namespace: {{ unifi_controller_namespace }}
spec:
    capacity:
        storage: 2Gi
    accessModes:
        - ReadWriteMany
    nfs:
        server: {{ nfs_server }}
        path: {{ unifi_controller_config }}
    storageClassName: nfs
