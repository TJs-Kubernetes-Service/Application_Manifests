apiVersion: v1
kind: Service
metadata:
    name: personal-website
    namespace: {{ website_namespace }}
    labels:
        app: personal-website
spec:
    type: LoadBalancer
    selector:
        app: personal-website
    loadBalancerIP: {{ load_balancer_ip }}
    ports:
    - protocol: TCP
      targetPort: 80
      port: 80
